
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>


@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <label>Username</label>
            <input id="txtuname" name="txtuname" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input id="txtpass" name="txtpass" type="text" class="form-control" />
            <label class="text-danger">@ViewBag.loginerror</label>
        </div>
        <div class="form-group">
            <label></label>
            <input value="Login" type="submit" class="btn btn-info" />
        </div>
    </div>
}